#include <stdio.h>
int main()
{
    int n, i, j=0, k;
    printf("\nEnter the number of elements to be stored in the array: ");
    scanf("%d", &n);
    int arr[n]; 
    int newarr[n]; //leaving extra array space
    printf("\nEnter the elements of the array: ");
    for(i=0; i<n; i++)
    {
        scanf("%d", &arr[i]);
    }
    //sorting the array for convenience
    int temp;
    for(i=0; i<n-1; i++)
    {
        for(k=0; k<n-i-1; k++)
        {
            if(arr[k]>arr[k+1])
            {
               temp=arr[k];
               arr[k]=arr[k+1];
               arr[k+1]=temp;
            }
        }
    }
    
    for(i=0; i<n; i++)
    {
        if(arr[i]!=arr[i+1])
        {
            newarr[j++]=arr[i];
        }
    }
    printf("\nTherefore, the new array is: ");
    for(i=0; i<j; i++)
    {
        printf("%d\n", newarr[i]);
    }
    return 0;
}
