#include <stdio.h>

int main()
{
    unsigned int side1, side2, side3; 
    printf("\nEnter the sides of the triangle to test validity: ");
    scanf("%d %d %d", &side1, &side2, &side3);
    if(side1<side2+side3 && side2<side3+side1 && side3<side2+side1)
    {
        printf("\nThe triangle is valid and ");
        if(side1==side2||side2==side3||side1==side3)
        {
            printf("it is isosceles in nature.");
        }
        else if(side1==side2 && side1==side3 && side2==side3)
        {
            printf("it is equilateral in nature.");
        }
        else if(side1!=side2 && side1!=side3 && side2!=side3)
        {
            printf("it is scalene in nature.");
        }
    }
    else
    {
        printf("\nThe triangle is invalid.");
    }
    return 0;
}
