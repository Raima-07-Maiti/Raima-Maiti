#include <stdio.h>

int main()
{
    unsigned int day, month, year; int flag=0;
    printf("\nEnter the day number: ");
    scanf("%u", &day);
    printf("\nEnter the month number: ");
    scanf("%u", &month);
    printf("\nEnter the year number: ");
    scanf("%u", &year);
    if(month==1 || month==3 || month==5 || month==7 || month==8 || month==10 || month==12)
    {
        if(day!=0 && day<=31)
        {
            flag++;
        }
    }
    else if (month==4 || month==6 || month==9 || month==11)
    {
        if(day!=0 && day<=30)
        {
            flag++;
        }
    }
    else if(month==2)
    {
        if(year%100==0)
        {
            if(year%400==0)
            {
                if(day!=0 && day<=29)
                {
                    flag++;
                }
            }
        }
        else if(year%4==0)
        {
            if(day!=0 && day<=29)
            {
                flag++;
            }
        }
        else
        {
            if(day!=0 && day<=28)
            {
                flag++;
            }
        }
    }
    if(flag==0)
    {
        printf("\nThe date entered is NOT a valid date.");
    }
    else
    {
        printf("\nThe date entered is a valid date."); 
    }

    return 0;
}
