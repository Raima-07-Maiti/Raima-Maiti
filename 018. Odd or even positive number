#include <stdio.h>

int main()
{
   int num; 
   printf("\nEnter any number: ");
   scanf("%d", &num);
   
   if(num>0)
   {
       if(num%2==0)
       {
           printf("\n%d is an even number.", num);
       }
       else
       {
           printf("\n%d is an odd number.", num);
       }
   }
   else
   {
       printf("\nThe entered number is not a positive number.");
   }

    return 0;
}
