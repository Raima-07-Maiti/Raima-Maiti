#include <stdio.h>
#include <math.h>

int main()
{
    unsigned int number, square, flag=0, counter=0, temp, i, split, sum; 
    printf("\nEnter any number: ");
    scanf("%u", &number);
    square=number*number;
    temp=square;
    while(temp!=0)
    {
        temp/=10;
        counter++;
    }
    for(i=1; i<=counter; i++)
    {
        split= (int)pow(10, i);
        if(split==number)
        {
            continue;
        }
        sum=square/split + square%split;
        if(sum==number)
        {
            flag++;
            break;
        }
    }
    if(flag==0)
    {
        printf("\n%u is NOT a Kaprekar number.", number);
    }
    else
    {
        printf("\n%u is a Kaprekar number.", number);
    }
    
    return 0;
}
