#include <stdio.h>

int main()
{
    float principal, rate, SI;
    int Time;
    printf("\nEnter the Principal Amount: ");
    scanf("%f", &principal);
    printf("\nEnter the Interest Rate: ");
    scanf("%f", &rate);
    printf("\nEnter the Time in Years: ");
    scanf("%d", &Time);
    SI= (principal*rate*Time)/100.0f;
    printf("The Simple Interest based on the given data is: %.2f", SI);
    return 0;
}
