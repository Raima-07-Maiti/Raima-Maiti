#include <stdio.h>
#include <math.h>

int main()
{
    unsigned int number, temp, sum=0; 
    printf("\nEnter any number: ");
    scanf("%u", &number);
    temp=number;
    while(temp!=0)
    {
        sum+=temp%10;
        temp/=10;
    }
    if(number%sum==0)
    {
        printf("\n%u is a Niven number.", number);
    }
    else
    {
        printf("\%u is NOT a Niven number.", number);
    }

    return 0;
}
