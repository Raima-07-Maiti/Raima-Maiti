#include <stdio.h>

int main()
{
    float x1, y1, x2, y2, slope;
    printf("\nEnter the cordinates of the first point: ");
    scanf("%f %f", &x1, &y1); 
    printf("\nEnter the cordinates of the second point: ");
    scanf("%f %f", &x2, &y2); 
    
    slope=(y2-y1)/(x2-x1);
    printf("\nTherefore the slope of the given points is: %.2f", slope);
}
